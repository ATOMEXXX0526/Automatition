# Naumen Service Desk Configuration
NAUMEN_URL=https://your-naumen-server.com
NAUMEN_API_KEY=your-api-key-here
NAUMEN_VERIFY_SSL=true

# AI Assistant Settings
AUTO_APPLY_THRESHOLD=0.80
MIN_CONFIDENCE_THRESHOLD=0.50

# Flask Settings
FLASK_DEBUG=false
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Logging
LOG_LEVEL=INFO
LOG_FILE=ai_assistant.log
LOG_FORMAT=json

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# Operational Mode
# Set to true to only log actions without actually updating tickets
DRY_RUN_MODE=false

# Webhook Security
WEBHOOK_SECRET=your-webhook-secret-here
